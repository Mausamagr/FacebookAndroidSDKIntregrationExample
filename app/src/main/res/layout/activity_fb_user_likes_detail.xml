<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fb_user_likes_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.facebook.com.facebookassignment.View.FbUserLikesDetailActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@android:color/white"
        android:transitionName="thumbnail_view"
        tools:background="#8000000"
        tools:ignore="UnusedAttribute" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_name"/>

            <TextView
                android:layout_below="@id/like_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_category"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
